<Window x:Class="ExtremeEnviroment.AppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExtremeEnviroment"
        mc:Ignorable="d"
        Title="AppWindow" Height="450" Width="800">
    <Grid x:Name="mainPanel" d:IsLocked="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="2.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1" Grid.Row="1">
            <Button x:Name="BtnNewProject" Content="새 프로젝트 만들기" Click="BtnNewProject_Click"  Margin="10" Height="40"/>
            <Button x:Name="BtnLoadProject" Content="프로젝트 열기" Click="BtnLoadProject_Click" Margin="10" Height="40"/>
        </StackPanel>
    </Grid>
</Window>
