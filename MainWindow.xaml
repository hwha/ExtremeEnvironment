<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExtremeEnviroment"
        xmlns:ImageList="clr-namespace:ExtremeEnviroment.Module.ImageList"
        xmlns:ImageView="clr-namespace:ExtremeEnviroment.Module.ImageView"
        xmlns:ImageInspector="clr-namespace:ExtremeEnviroment.Module.ImageInspector"
        xmlns:MapView="clr-namespace:ExtremeEnviroment.Module.MapView"
        xmlns:ChartView="clr-namespace:ExtremeEnviroment.Module.ChartView"
        xmlns:ImagePropView="clr-namespace:ExtremeEnviroment.Module.ImagePropView"
        xmlns:DataList="clr-namespace:ExtremeEnviroment.Module.DataList"
        x:Class="ExtremeEnviroment.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600">
    <Grid x:Name="mainPanel" d:IsLocked="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="3*" MinHeight="100" MaxHeight="600"/>
        </Grid.RowDefinitions>
        <GridSplitter HorizontalAlignment="Stretch" 
                      VerticalAlignment="Center" 
                      Grid.Row="4" 
                      Grid.Column="0"
                      Grid.ColumnSpan="5" 
                      Background="DarkGray"
                      ShowsPreview="True"
                      Height="5"/>

        <Menu Height="25" Grid.Row="0" Grid.ColumnSpan="5">
            <MenuItem Header="파일">
                <MenuItem Header="새로만들기">
                    <MenuItem Header="새로만들기1"/>
                    <MenuItem Header="새로만들기2"/>
                </MenuItem>
                <MenuItem Header="열기"/>
                <MenuItem Header="저장"/>
                <MenuItem Header="다른이름으로 저장"/>
                <Separator />
                <MenuItem Header="종료"/>
            </MenuItem>
        </Menu>
        <ToolBarTray Height="25" Grid.Row="1" Grid.ColumnSpan="5">
            <ToolBar>
                <Button Command="New" ToolTip="새 프로젝트">
                    <Image Source="Resources/toolbar/NewFileCollection_16x.png" />
                </Button>
                <Button Command="Open" ToolTip="파일열기">
                    <Image Source="Resources/toolbar/OpenFolder_16x.png" />
                </Button>
                <Button Command="Save" ToolTip="저장하기">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/toolbar/Save_16x.png" />
                    </StackPanel>
                </Button>
            </ToolBar>
        </ToolBarTray>
        

        <ImageList:ImageListControl x:Name="ImageList" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="0" Grid.Row="2" Grid.RowSpan="2" />
        <ImageView:ImageViewControl x:Name="ImageViewer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" Grid.RowSpan="2" />
        <ImageInspector:ImageInspectorControl x:Name="ImageInspector" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Grid.Column="3" Grid.Row="2" Grid.RowSpan="2" x:FieldModifier="public"/>
        <MapView:MapViewControl x:Name="MapViewer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="4" Grid.Row="2" />
        <ImagePropView:ImagePropViewControl x:Name="ImagePropView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="4" Grid.Row="3" />
        <DataList:DataListControl x:Name="DataList" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="5" />
        <ChartView:ChartViewControl  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="5"  />

        <Button Grid.Column="4" Grid.Row="5" Content="결과 저장"/>

    </Grid>
</Window>